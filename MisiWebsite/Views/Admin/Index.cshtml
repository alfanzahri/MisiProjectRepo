
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="bootstrap">
    <div class="page-head">
        <h2 class="page-title">Billing Reports</h2>
        <ul class="breadcrumb page-breadcrumb">
            <li class="breadcrumb-container">
                <a href=""><i class="fa fa-file-text-o"></i>Forms</a>
            </li>
        </ul>
    </div>
</div>

<div class="bootstrap">
    <div class="alert alert-success">
        <button data-dismiss="alert" class="close" type="button">x</button> Successful update
    </div>
</div>
<!-- begin row -->
<div class="row">
    <div class="col-lg-12">
        <form class="defaultForm form-horizontal AdminContacts">
            <div class="panel">
                <div class="panel-heading">
                    <i class="icon-tablet"></i>
                    Forms Single Column
                </div>
                <div class="form-wrapper">
                    <div class="form-group">
                        <label class="control-label col-lg-3 required">
                            <span title="" data-html="true" data-toggle="tooltip" class="label-tooltip" data-original-title="Contact name (e.g. Customer Support.
		">
                                Title
                            </span>
                        </label>
                        <div class="col-lg-4">
                            <div class="form-group">
                                <div class="col-lg-9">
                                    <input type="text" required="required" value="" class="" name="name_3" id="name_3">
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-lg-3 required">
                            <span title="" data-html="true" data-toggle="tooltip" class="label-tooltip" data-original-title="													If enabled, all messages will be saved in the &quot;Customer Service&quot; page under the &quot;Customer&quot; menu. 												">
                                Save Messages
                            </span>

                        </label>
                        <div class="col-lg-9">
                            <span class="switch prestashop-switch fixed-width-lg">
                                <input type="radio" value="1" id="customer_service_on" name="customer_service">
                                <label for="customer_service_on">Yes</label>
                                <input type="radio" checked="checked" value="0" id="customer_service_off" name="customer_service">
                                <label for="customer_service_off">No</label>
                                <a class="slide-button btn"></a>
                            </span>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-lg-3">
                            <span title="" data-html="true" data-toggle="tooltip" class="label-tooltip" data-original-title="Description">Description</span>
                        </label>
                        <div class="col-lg-6">
                            <textarea class=" textarea-autosize" name="description_3" style="overflow: hidden; word-wrap: break-word; resize: none; height: 61px;"></textarea>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-lg-3">
                            <span title="" data-html="true" data-toggle="tooltip" class="label-tooltip" data-original-title="Tanggal">Tanggal</span>
                        </label>
                        <div class="col-lg-1">
                            @(Html.Kendo().DatePicker().Name("Tanggal"))
                        </div>
                    </div>
                    <!-- Button trigger modal -->
                    <button type="button" class="btn btn-primary btn-lg" data-toggle="modal" data-target="#myModal">
                        + Add PR
                    </button>

                    <!-- Modal -->
                    <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
                        <div class="modal-dialog">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
                                    <h4 class="modal-title" id="myModalLabel">Modal title</h4>
                                </div>
                                <div class="modal-body">
                                    ...
                                </div>
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                                    <button type="button" class="btn btn-primary">Save changes</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="panel-footer">
                    <button class="btn btn-default" name="submitAddcontact" id="contact_form_submit_btn" value="1" type="submit">
                        <i class="process-icon-fa fa-save"></i> Save
                    </button>
                    <a onclick="window.history.back();" class="btn btn-default" href="">
                        <i class="process-icon-fa fa-times"></i> Cancel
                    </a>
                </div>
            </div>
        </form>
    </div>
</div>
<!-- end row -->


